#include <stdio.h>

 main() {
   int x,y,z;

   // x = BASE;
   printf("\ncoloque a medida da BASE: ");
   scanf("%d",&x); //IN 

   // y = ALTURA;
    printf("\ncoloque a medida da ALTURA: ");
    scanf("%d",&y); //IN

    z = 2;
    
    int AREA = (x*y)/z;
    printf("AREA aproximada do tringulo: %d", AREA); //OUT
    return 0;
 }
